<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:maxWidth="@dimen/message_max_width"
        android:background="@drawable/user_message_shape"
        android:textColor="@color/colorWhite"
        android:padding="@dimen/message_padding"
        android:textAppearance="?attr/textAppearanceListItem" />

    <ImageView
        android:id="@+id/avatar_right"
        android:layout_width="@dimen/chat_avatar_width"
        android:layout_height="@dimen/chat_avatar_height"
        android:layout_margin="@dimen/text_margin"
        android:background="@color/colorWhite"
        android:src="@drawable/icon_chat_anonymous"
        android:contentDescription="UserAvatar" />

</LinearLayout>